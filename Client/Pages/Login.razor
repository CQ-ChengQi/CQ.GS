@page "/login"

@layout LoginLayout

<MudGrid Justify="Justify.Center">

    <MudItem lg="3" md="4" sm="6" xs="9" Class="mt-10">
        <MudStack>
            <MudPaper Class="pa-4" Elevation="0">
                <MudStack Row="true">
                    <MudText Typo="Typo.h3">Mony Larsson</MudText>
                </MudStack>
            </MudPaper>

            <MudPaper Class="pa-4" Elevation="0">
                <MudStack Spacing="4">
                    <MudTextField T="string" Label="Card number" Mask="@(new PatternMask("0000 0000 0000 0000"))" />
                    <MudStack Row="true">
                        <MudTextField T="string" Label="Expires" Mask="@(new DateMask("MM/YY", 'Y', 'M'))" />
                        <MudTextField T="string" Label="CVC" Mask="@(new PatternMask("000"))" />
                    </MudStack>
                </MudStack>
            </MudPaper>

            <MudPaper Class="pa-4" Elevation="0">
                <MudStack Row="true" Justify="Justify.SpaceBetween">
                    <MudSwitch @bind-Checked="@ReadOnly" Label="@(ReadOnly ? "ReadOnly Mode" : "Edit Mode")" />
                    <MudLink Href="#">Default?</MudLink>
                </MudStack>
            </MudPaper>

            <MudPaper Class="pa-4" Elevation="0">
                <MudStack>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true">Pay Now
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudStack>
    </MudItem>
</MudGrid>

@code {
    public bool ReadOnly { get; set; } = true;

}