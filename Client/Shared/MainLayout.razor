<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavGroup Title="路由" Icon="@Icons.Material.Filled.Router">
                <MudNavLink Href="/user" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Group">用户管理</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudTabs Elevation="1" Rounded="true" PanelClass="pa-6">
            <MudTabPanel>
                <ChildContent>
                    @Body
                </ChildContent>
                <TabContent>
                    首页
                </TabContent>
            </MudTabPanel>
    
        </MudTabs>
    </MudMainContent>
</MudLayout>



@code {
    bool _drawerOpen = true;

    string _navMenuWidth = "";
    string _appBarHeight = "";

    [Inject]
    private AppSettings? _appSettings { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (_appSettings != null)
        {
            _navMenuWidth = _appSettings.NavMenuWidth;
            _appBarHeight = _appSettings.AppBarHeight;
        }


    }


    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}