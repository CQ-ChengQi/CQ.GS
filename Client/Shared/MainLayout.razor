@using CQ.GS.Client.Services;
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Success" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@(e => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="4" Color="Color.Primary" Width="@_navMenuWidth">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">My App</MudText>
        </MudDrawerHeader>
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    string _navMenuWidth = "";
    string _appBarHeight = "";

    [Inject]
    private AppSettings? _appSettings { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (_appSettings != null)
        {
            _navMenuWidth = _appSettings.NavMenuWidth;
            _appBarHeight = _appSettings.AppBarHeight;
        }


    }


    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}